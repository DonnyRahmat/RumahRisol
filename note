<?php
if (isset($_POST['submit'])) {
  $username = $_POST['username'];
  $pass = $_POST['password'];

  $stmt = $pdo->prepare("SELECT * FROM t_user WHERE username=:uname");
  $stmt->bindParam(':uname', $_POST['username']);
  $stmt->execute();
  $user = $stmt->fetch();
  if($stmt->rowCount() == 0) {
    echo "Tidak ada username";
  }else{
    if($pass <> $user['password']) {
      echo "<script type='text/javascript'>$( document ).ready(function() { $('.toast').toast('show'); });</script>";
    }else{
      echo "sukses";
    }
  }
}
?>

<div class="row">
  <div class="cell">
      <?php
      if (isset($_POST["submit"])) {
        $sql = "INSERT INTO t_barang(nama_barang,
              satuan,
              ukuran,
              stok,
              stok_min,
              harga_beli) VALUES (
              :nb,
              :s,
              :u,
              :st,
              :stm,
              :hb)";

        $stmt = $pdo->prepare($sql);

        $stmt->bindParam(':nb', $_POST['nb'], PDO::PARAM_STR);
        $stmt->bindParam(':s', $_POST['s'], PDO::PARAM_STR);
        $stmt->bindParam(':u', $_POST['u'], PDO::PARAM_STR);
        $stmt->bindParam(':st', $_POST['st'], PDO::PARAM_STR);
        $stmt->bindParam(':stm', $_POST['stm'], PDO::PARAM_STR);
        $stmt->bindParam(':hb', $_POST['hb'], PDO::PARAM_STR);

        $stmt->execute();
        // echo "data input berhasil";
        echo "<button class=\"command-button primary rounded w-100\">
                <span class=\"mif-checkmark icon\"></span>
                <span class=\"caption\">
                    Informasi
                    <small>Input Berhasil</small>
                </span>
            </button>";
      }else{}
      ?>
  </div>
</div>
